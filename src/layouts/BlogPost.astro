---
import type { CollectionEntry } from "astro:content";
import BaseLayout from "../layouts/BaseLayout.astro";
import FormattedDate from "../components/FormattedDate.astro";

type Props = CollectionEntry<"portfolio">["data"];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<BaseLayout>
	<article class="prose prose-invert text-white">
		{
			heroImage && (
				<img
					src={heroImage}
					alt={title}
					id="hero-image"
					class="max-h-[40vh] w-auto m-auto mb-4 xl:mb-6"
				/>
			)
		}
		<h1 class="title">{title}</h1>
		<FormattedDate date={pubDate} />
		{
			updatedDate && (
				<div class="last-updated-on border-b-2 border-b-white pb-2">
					Zuletzt aktualisiert am <FormattedDate date={updatedDate} />
				</div>
			)
		}
		<slot />
	</article>
</BaseLayout>

---
export interface Props {
	date: Date | undefined;
	className: string | undefined;
}

const { date, className } = Astro.props;
---

<time datetime={date?.toISOString()} class={className}>
	{
		date?.toLocaleDateString('de', {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
	}
</time>
